<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
    >

  <LinearLayout
      android:id="@+id/buttonPanel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:gravity="center_horizontal"
      >

    <ImageView
        android:id="@+id/drag_area"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:clickable="true"
        android:padding="8dp"
        android:src="@drawable/ic_drag_area"
        android:background="@color/grey"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/btn_debug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/FloatView.Text"
        android:text="debug"
        />

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/FloatView.Text"
        android:text="reset"
        />

    <Button
        android:id="@+id/btn_hide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/FloatView.Text"
        android:text="hide"
        />

    <Button
        android:id="@+id/btn_logcat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/FloatView.Text"
        android:text="logcat"
        />

    <Button
        android:id="@+id/btn_trigger_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/FloatView.Text"
        android:text="trigger"
        />

    <Button
        android:id="@+id/btn_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/FloatView.Text"
        android:text="record"
        />

    <Button
        android:id="@+id/btn_replay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/FloatView.Text"
        android:text="replay"
        />

  </LinearLayout>

  <ScrollView
      android:id="@+id/layout_loginfo_wrapper"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/buttonPanel"
      android:layout_alignTop="@id/buttonPanel"
      android:layout_alignBottom="@id/buttonPanel"
      >

    <TextView
        android:id="@+id/tv_loginfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:textColor="@color/black"
        />

  </ScrollView>


</RelativeLayout>
