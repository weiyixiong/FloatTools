<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.wyx.flex"
    >

  <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
  <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

  <uses-feature
      android:name="android.hardware.sensor.accelerometer"
      android:required="true"
      />
  <application
      android:allowBackup="true"
      android:label="@string/app_name"
      android:supportsRtl="true"
      >
    <meta-data
        android:name="AA_DB_NAME" android:value="Record.db"
        />
    <meta-data
        android:name="AA_DB_VERSION" android:value="1"
        />
    <meta-data
        android:name="AA_MODELS"
        android:value="com.wyx.flex.record.Record,com.wyx.flex.record.RecordEvent"
        />


    <activity android:name=".activity.DetailInfoActivity" />
    <activity
        android:name=".activity.LogCatActivity"
        android:launchMode="singleInstance"
        />
    <activity
        android:name=".activity.RecordActivity"
        android:launchMode="singleInstance"
        />

    <service
        android:name="com.wyx.flex.service.DetectionService"
        android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
        >

      <intent-filter>
        <action android:name="android.accessibilityservice.AccessibilityService" />
      </intent-filter>

      <meta-data
          android:name="android.accessibilityservice"
          android:resource="@xml/detection_service_config"
          />

    </service>
  </application>

</manifest>
